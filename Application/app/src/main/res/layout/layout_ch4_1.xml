<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_tv1"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_bt1"
        android:text="+(内部匿名)"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_bt2"
        android:text="-(内部类)"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_bt3"
        android:text="*(直接实现)"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_bt4"
        android:text="/(XML调用)"
        android:onClick="onClick2"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_et1"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/ch4_1_et2"
        android:layout_height="wrap_content" />
</LinearLayout>
